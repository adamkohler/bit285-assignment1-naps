@model bit285_assignment1_naps.Models.User
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
	Layout = "_Layout";
}
<h1>New Account Information</h1>
<fieldset>
	<form>
		<div>
			<label asp-for="FirstName" >First Name</label>
			<input asp-for="FirstName"/>
			<span>* required</span>
		</div>
		<div>
			<label asp-for="LastName">Last Name</label>
			<input asp-for="LastName" />
			<span>* required</span>
		</div>
		<div>
			<label asp-for="EmailAdd" >Email Address</label>
			<input asp-for="EmailAdd"/>
			<span>* required</span>
		</div>
		<div>
			<label>Program</label>
			<select>
				<option>Web App Dev</option>
				<option>Mobile App Dev</option>
				<option>Front-end Dev</option>
			</select>
		</div>
		<div>
			<input type="submit" />
			<input type="button" value="Reset" />
		</div>
	</form>
</fieldset>